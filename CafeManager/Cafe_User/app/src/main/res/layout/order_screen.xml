<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="20dp"
        android:gravity="center_vertical"
        >
        <ImageButton
            android:id="@+id/category_coffee"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/coffee_icon"
            android:scaleType="centerCrop"
            android:layout_marginBottom="30dp"
            />
        <ImageButton
            android:id="@+id/category_juice"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/juice_icon"
            android:scaleType="centerCrop"
            android:layout_marginBottom="30dp"
            />
        <ImageButton
            android:id="@+id/category_smoothie"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/shake_icon"
            android:scaleType="centerCrop"
            android:layout_marginBottom="30dp"
            />
        <ImageButton
            android:id="@+id/category_bread"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/sandwich_icon"
            android:scaleType="centerCrop"
            android:layout_marginBottom="30dp"
            />
        <ImageButton
            android:id="@+id/category_dessert"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/chocolate_icon"
            />



    </LinearLayout>

    <FrameLayout
        android:id="@+id/order_menu_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="700dp"
            android:src="@drawable/order_background"
            />
    </FrameLayout>


</LinearLayout>